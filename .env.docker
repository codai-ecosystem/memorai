# Memorai Docker Environment Configuration

# API Configuration
API_PORT=6367
API_HOST=0.0.0.0
NODE_ENV=production

# Dashboard Configuration
DASHBOARD_PORT=6366
NEXT_PUBLIC_API_URL=http://localhost:6367

# Redis Configuration (Optional)
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ORIGINS=http://localhost:6366,http://localhost:3000

# Performance
MAX_MEMORY_USAGE=512m
NODE_OPTIONS=--max-old-space-size=512

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
