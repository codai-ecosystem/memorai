# Enterprise Production Configuration for MemorAI
# Optimized for performance and large-scale deployments

# Core Performance Settings
MEMORAI_ENGINE_TYPE=high_performance
MEMORAI_MAX_MEMORY_SIZE=50000
MEMORAI_MEMORY_CLEANUP_INTERVAL=6h
MEMORAI_DUPLICATE_THRESHOLD=0.98

# Vector Database Optimization
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=memorai_optimized
QDRANT_BATCH_SIZE=500
QDRANT_CONNECTION_POOL_SIZE=5
QDRANT_REQUEST_TIMEOUT=15000
QDRANT_HNSW_M=24
QDRANT_HNSW_EF_CONSTRUCT=150
QDRANT_ENABLE_QUANTIZATION=true
QDRANT_SEGMENT_THRESHOLD=10000

# Caching Configuration
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=5000
CACHE_HIT_TARGET=0.85

# Memory Retention Policies
MEMORY_MAX_AGE_DAYS=60
MEMORY_LOW_ACCESS_THRESHOLD=1
MEMORY_LOW_ACCESS_MAX_AGE_DAYS=21
MEMORY_IMPORTANCE_THRESHOLD=0.3

# Performance Monitoring
PERFORMANCE_MONITORING=true
METRICS_COLLECTION_INTERVAL=60000
PERFORMANCE_ALERTS=true
SLOW_QUERY_THRESHOLD=2000

# Resource Limits
MAX_CONCURRENT_REQUESTS=50
MAX_QUERY_TIME_MS=5000
MAX_EMBEDDING_BATCH_SIZE=100
MEMORY_USAGE_LIMIT_MB=512

# Embedding Configuration (Optimized)
MEMORAI_EMBEDDING_PROVIDER=local
MEMORAI_EMBEDDING_MODEL=all-MiniLM-L6-v2
MEMORAI_EMBEDDING_BATCH_SIZE=50
MEMORAI_EMBEDDING_CACHE_SIZE=1000

# Dashboard Configuration
MEMORAI_DASHBOARD_PORT=6366
MEMORAI_DASHBOARD_ENABLED=true
MEMORAI_API_PORT=6367
DASHBOARD_REFRESH_INTERVAL=30000

# Security Configuration
MEMORY_ENCRYPTION_ENABLED=true
MEMORY_ENCRYPTION_KEY=abcd1234567890abcdef1234567890abcdef1234567890abcdef1234567890ab
SECURITY_AUDIT_LOGGING=true
RATE_LIMITING_ENABLED=true
MAX_REQUESTS_PER_MINUTE=120

# Logging Configuration
LOG_LEVEL=info
LOG_PERFORMANCE=true
LOG_RETENTION_DAYS=7
LOG_FILE_MAX_SIZE=100MB

# Development vs Production
NODE_ENV=production
MEMORAI_DEBUG=false
MEMORAI_PROFILING=false

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
AUTO_RECOVERY_ENABLED=true

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
RESTART_ON_HEALTH_FAILURE=true

# Feature Flags
ENABLE_COMPRESSION=true
ENABLE_TIME_DECAY=true
ENABLE_SMART_DEDUPLICATION=true
ENABLE_CONTEXT_CACHING=true
ENABLE_QUERY_OPTIMIZATION=true
ENABLE_MEMORY_TIERING=true
