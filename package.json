{
  "name": "memorai-mcp",
  "version": "2.0.0",
  "description": "Production-Ready Agent-Native Memory Control Protocol",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:all": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "start:dashboard": "cd apps/web-dashboard && npm run dev",
    "start:api": "cd apps/api && npm run dev",
    "start:mcp": "node packages/mcp/dist/server.js"
  },
  "devDependencies": {
    "@turbo/gen": "^1.13.4",
    "turbo": "^1.13.4",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dragoscv/memorai-mcp.git"
  },
  "keywords": [
    "memory",
    "ai",
    "mcp",
    "agents",
    "semantic-search",
    "vector-database"
  ],
  "license": "MIT",
  "author": "Dragos CV"
}
