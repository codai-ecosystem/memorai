{
  "name": "memorai-mcp",
  "version": "1.0.0",
  "private": true,
  "description": "Enterprise-grade agent-native Memory Control Protocol for AI agents",
  "repository": {
    "type": "git",
    "url": "https://github.com/dragoscv/memorai-mcp.git"
  },
  "author": "Dragos CV <dragos@codai.dev>",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "setup": "pwsh tools/scripts/bootstrap.ps1",
    "demo": "pnpm --filter @codai/memorai-demo dev",
    "server": "pnpm --filter @codai/memorai-server dev",
    "docker:up": "docker-compose -f tools/docker/docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f tools/docker/docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f tools/docker/docker-compose.dev.yml logs -f"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "node-fetch": "^3.3.2",
    "prettier": "^3.1.0",
    "turbo": "^2.5.4",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "ws": "^8.18.2"
  },
  "packageManager": "pnpm@8.10.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [
    "mcp",
    "memory",
    "ai-agent",
    "vector-db",
    "semantic-search",
    "enterprise",
    "typescript"
  ]
}
