{
  "name": "memorai-mcp",
  "version": "2.0.1",
  "description": "Production-Ready Agent-Native Memory Control Protocol",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:all": "turbo build",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo clean && rm -rf node_modules",
    "publish-packages": "node scripts/publish-packages.js",
    "test:ui": "npx vitest ui",
    "test:run": "vitest run",
    "test:coverage": "vitest --coverage",
    "_DEPRECATED_dev": "echo 'FORBIDDEN: Use published packages via MCP server only' && exit 1",
    "_DEPRECATED_start:dashboard": "echo 'FORBIDDEN: Use MCP server published packages only' && exit 1",
    "_DEPRECATED_start:api": "echo 'FORBIDDEN: Use MCP server published packages only' && exit 1",
    "_DEPRECATED_start:mcp": "echo 'FORBIDDEN: Use MCP server published packages only' && exit 1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^16.1.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "eslint": "^8.57.1",
    "happy-dom": "^12.0.0",
    "jsdom": "^23.0.0",
    "prettier": "^3.3.3",
    "turbo": "^2.5.4",
    "typescript": "^5.5.4",
    "vitest": "^2.1.9"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codai-ecosystem/memorai.git"
  },
  "keywords": [
    "memory",
    "ai",
    "mcp",
    "agents",
    "semantic-search",
    "vector-database"
  ],
  "license": "MIT",
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "fast-jwt": ">=5.0.6",
      "brace-expansion": ">=2.0.2"
    }
  },
  "author": "Dragos CV"
}
